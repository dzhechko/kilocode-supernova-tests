# AI Sales Training Platform - Environment Variables Template
# Copy this file to .env and configure your settings

# =============================================
# APPLICATION SETTINGS
# =============================================

# Application name and version
APP_NAME=AI Sales Training Platform
APP_VERSION=2.0.0
APP_LANGUAGE=ru

# =============================================
# API ENDPOINTS
# =============================================

# ElevenLabs API
ELEVENLABS_BASE_URL=https://api.elevenlabs.io
ELEVENLABS_TTS_ENDPOINT=/v1/text-to-speech
ELEVENLABS_CONVERSATIONS_ENDPOINT=/v1/convai/conversations
ELEVENLABS_AGENT_ENDPOINT=/v1/convai/conversation

# OpenAI API
OPENAI_BASE_URL=https://api.openai.com
OPENAI_COMPLETIONS_ENDPOINT=/v1/chat/completions
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================
# CONVERSATION SETTINGS
# =============================================

# Maximum conversation duration in milliseconds
CONVERSATION_MAX_DURATION=1800000

# Typing delay between messages in milliseconds
CONVERSATION_TYPING_DELAY=1000

# Voice timeout in milliseconds
CONVERSATION_VOICE_TIMEOUT=5000

# Maximum retry attempts for failed requests
CONVERSATION_RETRY_ATTEMPTS=3

# =============================================
# SALES SCENARIOS
# =============================================

# Available scenarios (comma-separated)
SALES_SCENARIOS=software_sale,consulting_services

# Default voice ID for TTS
DEFAULT_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# =============================================
# SCORING CRITERIA WEIGHTS
# =============================================

# Communication skills weight (0.0-1.0)
SCORING_COMMUNICATION_SKILLS=0.25

# Product knowledge weight (0.0-1.0)
SCORING_PRODUCT_KNOWLEDGE=0.20

# Objection handling weight (0.0-1.0)
SCORING_OBJECTION_HANDLING=0.20

# Closing techniques weight (0.0-1.0)
SCORING_CLOSING_TECHNIQUES=0.20

# Relationship building weight (0.0-1.0)
SCORING_RELATIONSHIP_BUILDING=0.15

# =============================================
# UI SETTINGS
# =============================================

# Theme colors (hex codes)
UI_PRIMARY_COLOR=#4f46e5
UI_SECONDARY_COLOR=#059669
UI_SUCCESS_COLOR=#10b981
UI_WARNING_COLOR=#f59e0b
UI_ERROR_COLOR=#ef4444
UI_BACKGROUND_COLOR=#f8fafc
UI_SURFACE_COLOR=#ffffff

# Breakpoints in pixels
UI_MOBILE_BREAKPOINT=768
UI_TABLET_BREAKPOINT=1024
UI_DESKTOP_BREAKPOINT=1280

# Animation duration in milliseconds
UI_ANIMATION_DURATION=300

# =============================================
# SECURITY SETTINGS
# =============================================

# API key expiry time in milliseconds
SECURITY_KEY_EXPIRY_TIME=1800000

# Maximum API key length
SECURITY_MAX_KEY_LENGTH=200

# Minimum API key length
SECURITY_MIN_KEY_LENGTH=20

# Enable encryption for stored keys
SECURITY_ENCRYPTION_ENABLED=true

# =============================================
# FEATURE FLAGS
# =============================================

# Enable voice recognition
FEATURE_VOICE_RECOGNITION=true

# Enable text-to-speech
FEATURE_TEXT_TO_SPEECH=true

# Enable real-time analysis
FEATURE_REAL_TIME_ANALYSIS=true

# Enable offline mode
FEATURE_OFFLINE_MODE=true

# Enable export functionality
FEATURE_EXPORT_RESULTS=true

# =============================================
# PERFORMANCE SETTINGS
# =============================================

# Page load time target in milliseconds
PERFORMANCE_PAGE_LOAD_TARGET=3000

# API response time target in milliseconds
PERFORMANCE_API_RESPONSE_TARGET=2000

# Maximum memory usage in MB
PERFORMANCE_MAX_MEMORY_USAGE=100

# Target animation FPS
PERFORMANCE_TARGET_FPS=60

# =============================================
# CACHING SETTINGS
# =============================================

# Cache expiry time in milliseconds
CACHE_EXPIRY_TIME=3600000

# Maximum cache size in MB
CACHE_MAX_SIZE=50

# Enable analysis caching
CACHE_ANALYSIS_ENABLED=true

# =============================================
# DEBUG SETTINGS
# =============================================

# Enable debug logging
DEBUG_ENABLED=false

# Log level (error, warn, info, debug)
DEBUG_LOG_LEVEL=info

# Enable development tools
DEBUG_DEV_TOOLS=false

# =============================================
# PWA SETTINGS
# =============================================

# PWA cache name
PWA_CACHE_NAME=ai-sales-training-v2.0

# Static cache name
PWA_STATIC_CACHE=static-v2.0

# Dynamic cache name
PWA_DYNAMIC_CACHE=dynamic-v2.0

# =============================================
# ERROR MESSAGES
# =============================================

# No API keys error message
ERROR_NO_API_KEYS=Необходимо настроить API ключи для работы с платформой

# Invalid ElevenLabs key error
ERROR_INVALID_ELEVENLABS_KEY=Неверный формат ElevenLabs API ключа

# Invalid OpenAI key error
ERROR_INVALID_OPENAI_KEY=Неверный формат OpenAI API ключа

# Invalid Agent ID error
ERROR_INVALID_AGENT_ID=Неверный формат ElevenLabs Agent ID

# Network error message
ERROR_NETWORK_ERROR=Ошибка сети. Проверьте подключение к интернету

# Voice not supported error
ERROR_VOICE_NOT_SUPPORTED=Распознавание речи не поддерживается в вашем браузере

# Microphone denied error
ERROR_MICROPHONE_DENIED=Доступ к микрофону запрещен. Разрешите доступ для голосового ввода

# Conversation timeout error
ERROR_CONVERSATION_TIMEOUT=Время разговора истекло. Начните новую сессию

# Analysis failed error
ERROR_ANALYSIS_FAILED=Не удалось выполнить анализ разговора

# =============================================
# SUCCESS MESSAGES
# =============================================

# Keys saved success message
SUCCESS_KEYS_SAVED=API ключи успешно сохранены

# Conversation started success message
SUCCESS_CONVERSATION_STARTED=Разговор начат. Удачи!

# Analysis complete success message
SUCCESS_ANALYSIS_COMPLETE=Анализ разговора завершен

# Results exported success message
SUCCESS_RESULTS_EXPORTED=Результаты экспортированы

# =============================================
# LOCALIZATION
# =============================================

# Default language
LOCALE_DEFAULT=ru

# Fallback language
LOCALE_FALLBACK=en

# Enable RTL support
LOCALE_RTL_ENABLED=false

# =============================================
# ANALYTICS
# =============================================

# Enable analytics tracking
ANALYTICS_ENABLED=false

# Analytics provider (google, mixpanel, etc.)
ANALYTICS_PROVIDER=

# Tracking ID
ANALYTICS_TRACKING_ID=

# =============================================
# DEVELOPMENT
# =============================================

# Development server port
DEV_SERVER_PORT=3000

# Enable hot reload
DEV_HOT_RELOAD=true

# Source maps enabled
DEV_SOURCE_MAPS=true

# =============================================
# PRODUCTION
# =============================================

# Production domain
PROD_DOMAIN=https://your-domain.com

# Enable production optimizations
PROD_OPTIMIZATIONS=true

# Enable compression
PROD_COMPRESSION=true

# Enable HTTPS redirect
PROD_HTTPS_REDIRECT=true